generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


//User / Brugermodel
model User {
  id       Int      @id @default(autoincrement())
  isMale   Boolean
  birthday DateTime
  name     String
}

//Vinmodel
model Wine {
  id        Int      @id @default(autoincrement())
  country   String
  region    String
  prodYear  DateTime @db.Date
  producer  String
  alcohol   Decimal
  type      String
  grape     String
  price     Decimal
  currentcy String
}

//Palate Enums
enum AlcoholEnum {
Low
Medium
High
}

enum AcidityEnum {
Low
Medium
High

}
enum SweetnessEnum {
Dry
OffDry
Medium
Sweet
}

enum TanninEnum {
Low
Medium
High
}

enum BodyEnum {
Light
Medium
Full
}

enum FlavourIntensityEnum {
Light
Medium
Pronounced
}

enum FinishEnum {
Short
Medium
Long
}