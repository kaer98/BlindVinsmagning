generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

//User / Brugermodel
model User {
  id       Int        @id @default(autoincrement())
  gender   GenderEnum
  birthday DateTime
  fullName String
  username String     @unique
  password String
}

//Vinmodel
model Wine {
  id        Int      @id @default(autoincrement())
  country   String
  region    String
  prodYear  DateTime @db.Date
  producer  String
  alcohol   Decimal
  type      String
  grape     String
  price     Decimal
  currentcy String
}

//Gender Enum
enum GenderEnum {
  MALE
  FEMALE
}

//Palate Enums
enum AlcoholEnum {
  Low
  Medium
  High
}

enum AcidityEnum {
  Low
  Medium
  High
}

enum SweetnessEnum {
  Dry
  OffDry
  Medium
  Sweet
}

enum TanninEnum {
  Low
  Medium
  High
}

enum BodyEnum {
  Light
  Medium
  Full
}

enum FlavourIntensityEnum {
  Light
  Medium
  Pronounced
}

enum FinishEnum {
  Short
  Medium
  Long
}
